<%- include("includes/header.ejs") %>

    <div class="main Registration">
        <h2>Add Product</h2>
        <form method="post" action="/home/product">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required />

            <label for="price">Price:</label>
            <input type="number" id="price" name="price" required />

            <label for="quality">Quality:</label>
            <input type="text" id="quality" name="quality" placeholder="like good,better,etc." required />

            <label for="supplier">Supplier:</label>
            <input type="text" id="supplier" name="supplier"  required />

            <label for="stock">Old Stock:</label>
            <input type="text" id="stock" name="stock"  required />

            <label for="brand">Brand:</label>
            <select id="text" name="brand" class="dropdown" required>
                <option value="apple" name="apple">
                    apple
                </option>
                <option value="samsung" name="samsung">
                    samsung
                </option>
                <option value="redmi" name="redmi">
                    realme
                </option>
                <option value="redmi" name="redmi">
                    readmi
                </option>
            </select>

            <label for="category">Category:</label>
            <select id="text" name="category" required>
                <option value="Smartphones" name="Smartphones">
                    Smartphones
                </option>
                <option value="Laptops" name="Laptops">
                    Laptops
                </option>
                <option value="Cameras" name="Cameras">
                    Cameras
                </option>
                <option value="Headphones" name="Headphones">
                    Headphones
                </option>
            </select>

            <button type="submit" class="addUser">
                Add Product
            </button>
        </form>
    </div>
</body>

</html>
