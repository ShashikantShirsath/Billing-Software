<%- include("includes/header.ejs") %>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Quality</th>
                <th scope="col">Brand</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            <% for( product of products) { %>
                <tr>
                    <th> <%= product.name %></th>
                    <td> <%= product.price %></td>
                    <td> <%= product.quality %> </td>
                    <td> <%= product.brand %> </td>
                    <td> 
                        <form method="get" action="/home/<%= product.id %>/edit"  class="action-form">
                            <button class="action-btn">edit</button>
                        </form>
                        <form method="post" action="/home/<%= product.id %>?_method=DELETE" class="action-form">
                            <button class="action-btn">delete</button>
                        </form>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
    </body>

    </html>